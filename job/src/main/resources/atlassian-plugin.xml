<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="job"/>
    
    <!-- add our web resources -->
    <web-resource key="job-resources" name="job Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="job.css" location="/css/job.css"/>
        <resource type="download" name="job.js" location="/js/job.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>job</context>
    </web-resource>


    <job-config name="My job" key="myJobId">
        <job key="myJobRunner" perClusterJob="true" clusteredOnly="true"/>
        <schedule cron-expression="0/5 * * * * ?"/>
        <managed editable="true" keepingHistory="true" canRunAdhoc="true" canDisable="true"/>
    </job-config>
</atlassian-plugin>
